<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background">

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="200.0dip"

        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/university_title"
            android:layout_width="fill_parent"
            android:layout_height="129.0dip"
            android:src="@drawable/logo2" />

        <TextView
            android:id="@+id/title_explain"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/university_title"
            android:gravity="center_vertical"
            android:paddingLeft="5dip"
            android:text="请输入学号及密码进行登陆："
            android:textColor="#ff0000"
            android:textSize="22.0sp" />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/mid"
        android:layout_width="fill_parent"
        android:layout_height="300.0dip"
        android:layout_below="@+id/title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <EditText
            android:id="@+id/number"
            android:hint="请输入学号！"
            android:textColorHint="#03A9F4"
            android:numeric="integer"
            android:layout_width="300.0dip"
            android:layout_height="50.0dip"
            android:layout_gravity="center_vertical"
            android:textColor="#ff0000"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="17dp" />
        <EditText
            android:hint="请输入密码！"
            android:textColorHint="#03A9F4"
            android:layout_width="300.0dip"
            android:layout_height="50.0dip"
            android:layout_gravity="center_vertical"
            android:textColor="#ff0000"
            android:layout_below="@+id/number"
            android:layout_alignLeft="@+id/number"
            android:layout_alignStart="@+id/number"
            android:layout_marginTop="35dp"
            android:id="@+id/password" />
        <ImageView
            android:id="@+id/btn1"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:src="@drawable/lodin"
            android:layout_marginTop="13dp"
            android:layout_below="@+id/password"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
</RelativeLayout>



